rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to cities and their routes for all users
    match /cities/{cityId} {
      allow read;
      match /routes/{routeId} {
        allow read;
      }
    }
    // By default, deny all other writes/reads
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
