rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to cities and their routes
    match /cities/{cityId} {
      allow read;

      match /routes/{routeId} {
        allow read;
      }
    }

    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Lock down all other writes, but allow reads for admins in functions
    // Note: this doesn't grant client-side admin read access, that's handled by the function.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
